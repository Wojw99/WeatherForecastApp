<UserControl x:Class="WeatherForecastApp.WeekPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherForecastApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:OneDay x:Name="Day1" Grid.Row="0"/>
        <local:OneDay x:Name="Day2" Grid.Row="1"/>
        <local:OneDay x:Name="Day3" Grid.Row="2"/>
        <local:OneDay x:Name="Day4" Grid.Row="3"/>
        <local:OneDay x:Name="Day5" Grid.Row="4"/>
        <local:OneDay x:Name="Day6" Grid.Row="5"/>
        <local:OneDay x:Name="Day7" Grid.Row="6"/>
    </Grid>
</UserControl>
